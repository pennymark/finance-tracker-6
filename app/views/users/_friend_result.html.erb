<div class ="results-block">
    <%= render 'layouts/messages' %>
</div>

<% if @friends%>
    <div class ="card card-header results-block">
        <table class="col-md-12">
            <tbody>
                <% @friends.each do |friend| %>
                    <tr>
                        <td><strong>Name: <%= friend.full_name%></td>
                        <td><strong>Email: </strong><%= friend.email%></td>
                        <td><strong>Actions: </strong></td>
                        <td><%= link_to 'View', user_path(friend), class: "btn btn-sm btn-success" %></td>
                        <td><% if current_user.not_friends_with?(friend.id) %>
                            <%= link_to 'Add', friendships_path(friend: friend), class: "btn btn-sm btn-success", method: :post%>
                        <% else %>
                            <span class= "badge badge-secondary"> 
                                Friend
                            </span>
                        <%end%></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
<%end%>